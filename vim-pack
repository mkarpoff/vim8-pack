#! /usr/bin/env bash

COMMAND=$1
shift

echo "Command: $COMMAND"
if [ "$COMMAND" == "update" ]; then
	vim-pack-update "$@"
elif [ "$COMMAND" == "get"  ]; then
	vim-pack-get "$@"
elif [ "$COMMAND" == "remove"  ]; then
	vim-pack-remove "$@"
elif [ "$COMMAND" == "export"  ]; then
	vim-pack-export "$@"
elif [ "$COMMAND" == "import"  ]; then
	vim-pack-import "$@"
else
	echo " This should be some sort of usage statement"
	exit 1
fi
exit $?
